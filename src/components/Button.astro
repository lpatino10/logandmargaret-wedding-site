---
interface Props {
  href: string;
  label: string;
  newTab?: boolean;
}

const { href, label, newTab } = Astro.props;

const extraAttributes = {};
if (newTab) {
  extraAttributes["target"] = "_blank";
  extraAttributes["rel"] = "noopener noreferrer";
}
---

<a class="button-link" href={href} {...extraAttributes}>
  {label}
</a>
<style>
  .button-link {
    background-color: var(--dark-green);
    border-radius: 8px;
    color: white;
    font-size: 1.333rem;
    padding: 1rem 3rem 1rem 3rem;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .button-link:visited {
    color: white;
  }

  .button-link:hover {
    background-color: var(--light-green);
  }
</style>
